{% schema %} 
{
  "name": "Footer",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo-footer",
      "label": "Logo Footer"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "default": "<p>De Carlo Nicholas- VAT number: 07020260480- REA: FI-674952 - Registered office: Via di San Quirico a Ruballa 15, 50012, Bagno a Ripoli (FI), Italy</p>",
      "label": "Coppyright"
    },
    { 
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu footer",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Quick links",
          "label": "Title footer"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu footer"
        }
      ]
    },
    {
      "type": "text",
      "name": "Address",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Address",
          "label": "Title Address"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Address",
          "default": "<p>Address</p>"
        }
      ]
    }
    ,{
      "type": "search",
      "name": "Search",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Newsletter",
          "label": "Title newsletter"
        },
        {
          "type": "inline_richtext",
          "id": "heading2",
          "default": "Quick links",
          "label": "Title social"
        },
        {
          "type": "checkbox",
          "id": "show_line_separator",
          "default": false,
          "label": "Hidden social"
        },
        {
            "type": "url",
            "id": "link-facebook",
            "label": "Link Facebook"
        },
        {
            "type": "url",
            "id": "link-instagram",
            "label": "Link Instagram"
        },
        {
            "type": "url",
            "id": "link-youtube",
            "label": "Link Youtube"
        },
        {
            "type": "url",
            "id": "link-linkedin",
            "label": "Link LinkedIn "
        }
      ]
    }
  ]
}
{% endschema %}