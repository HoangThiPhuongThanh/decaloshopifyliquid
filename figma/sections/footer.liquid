{{ 'customize-column.css' | asset_url | stylesheet_tag }}
<footer>
    <div class="footer color-{{ section.settings.color_scheme }}">
        <div class="ctnr">
            <div class="logo__footer text-align-center">
                <a href="{{ routes.root_url }}">
                    {% if section.settings.logo-footer != blank %}
                      <img src="{{ ection.settings.logo-footer | image_url  }}" alt="">
                    {%- else -%}
                      <span class="h2">{{ shop.name }}</span>
                    {% endif %}
                </a> 
            </div>
            <div class="footer-st">
              <div class="row">
                {%- for link in section.blocks -%}
                  {% case link.type %}
                  {%- when 'link_list' -%}
                    
                  <div class="clm" style ="--w-lg:3; --w-md: 6; --w-sm: 12; --w-xs: 12;">
                      <div class="box border-0 bg-transparent">
                          <div class ="title_footer">
                              <h5 class ="h5 title fw-400 color-white footer__title">{{ link.settings.heading }}</h5>
                          </div>
                          <div class = "content">
                            <ul class="footer__list-menu">
                              {%- for link in link.settings.menu.links -%}
                                <li class="footer__menu-item mb-15">
                                    <a href="" class = "d-block footer__menu-link">{{ link.title }}</a>
                                </li>
                              {% endfor %}
                              </ul>
                          </div>
                      </div>
                  </div>
                  {%- when 'text' -%}
                  <div class="clm" style ="--w-lg:3; --w-md: 6; --w-sm: 12; --w-xs: 12;">
                    <div class="box border-0 bg-transparent">
                        <div class ="title_footer">
                            <h5 class ="h5 title fw-400 color-white footer__title">{{ link.settings.heading }}</h5>
                        </div>
                        <div class = "content">
                            <ul class="footer__list-menu">
                                <li class="footer__menu-item mb-15">
                                  {{ link.settings.text }}
                                </li>
                            </ul>
                        </div>
                    </div>
                  </div>
                  {%- when 'search' -%}
                  <div class="clm" style ="--w-lg:3; --w-md: 6; --w-sm: 12; --w-xs: 12;">
                      <div class="box border-0 bg-transparent">
                          <div class="form content">
                              <h5 class ="h5 title fw-400 color-white footer__title">{{ link.settings.heading }}</h5>
                              {% form 'customer', id: 'ContactFooter', class: 'footer__form p-relative' %}
                                <div class="form-group">
                                  <input
                                    id="NewsletterForm--{{ section.id }}"
                                    type="email"
                                    name="contact[email]"
                                    class="footer__input border-0 form-control bg-transparent"
                                    id=""
                                    required
                                    value="{{ form.email }}"
                                    placeholder="Your Email">
                                </div>
                                <button
                                  type="submit"
                                  id="Subscribe"
                                  class="footer__btn color-white bg-transparent border-0 p-absolute top-0 right-0 bottom-0">{{ block.settings.button_form }}Subscribe</button>
                              {% endform %}
                          </div>
                          {% if  link.settings.show_line_separator == false %}
