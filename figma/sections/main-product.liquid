<section class="product-detail distance-shared color-{{ section.settings.color_scheme }}">
  <div class="ctnr">
    <div class="breadcrumb">
      {% render 'breadcrumb' %}
    </div>
    <div class="row">
        <div class="clm" style = "--w-xs: 12; --w-sm: 12; --w-lg:6;">
          {% render 'product-media-gallery' %}
        </div>
        <div class="clm" style = "--w-xs: 12; --w-sm: 12; --w-lg:6;">
            <div class="product-detail__right">
                <div class="product-detail__content">
                    <h2 class="title h1 product-detail__title  line-height-15em">{{ product.title }}</h2>
                    {% if product.price != blank %}
                      {% assign price = product.price | split: "," %}
                      <span class="h1 price product-detail__price d-block">
                        {{ price.first | money}}
                      </span>
                      {%-  else -%} 
                      <span class="h1 price product-detail__price d-block">
                        Liên hệ
                    </span>
                    {% endif %}
                    <form action="/cart/add" method="post" class="d-flex fw-wrap jc-space-between">
                        <div class="form-group w-100">
                            <label for="" class="form-label product-detail__label w-100 d-flex jc-space-between">
                                <span class="product-detail__label-right letter-spacing tt-uppercase">Size</span>
                                <span class="product-detail__label-left d-flex align-items-center">
                                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M19.8747 5.24473L14.7553 0.125308C14.5882 -0.0417693 14.3183 -0.0417693 14.1512 0.125308L0.125308 14.1512C-0.0417693 14.3183 -0.0417693 14.5882 0.125308 14.7553L5.24473 19.8747C5.4118 20.0418 5.6817 20.0418 5.84877 19.8747L19.8747 5.84877C20.0418 5.6817 20.0418 5.4118 19.8747 5.24473ZM5.54461 18.9665L1.03352 14.4554L4.42219 11.0667L5.96016 12.6047C6.12295 12.7761 6.39713 12.7803 6.56421 12.6133C6.73557 12.4505 6.73985 12.1763 6.57277 12.0092C6.56849 12.0049 6.56849 12.0049 6.56421 12.0006L5.02624 10.467L6.14437 9.34883L8.54343 11.7479C8.71051 11.915 8.98468 11.915 9.14748 11.7436C9.31455 11.5765 9.31455 11.3066 9.14748 11.1396L6.74842 8.74049L7.86655 7.62236L9.40452 9.15604C9.5716 9.32312 9.84149 9.32312 10.0086 9.15604C10.1756 8.98897 10.1756 8.71907 10.0086 8.552L8.4706 7.01831L9.58873 5.90018L11.9878 8.29924C12.1549 8.46632 12.4248 8.46632 12.5918 8.29924C12.7589 8.13216 12.7589 7.86227 12.5918 7.69519L10.1928 5.29613L11.3109 4.178L12.8489 5.71597C13.016 5.88305 13.2859 5.88733 13.4529 5.72025C13.62 5.55317 13.6243 5.28328 13.4572 5.1162C13.4572 5.1162 13.4572 5.1162 13.4529 5.11192L11.9278 3.5611L13.0459 2.44297L15.445 4.84203C15.6121 5.0091 15.882 5.0091 16.0491 4.84203C16.2161 4.67495 16.2161 4.40506 16.0491 4.23798L13.65 1.83892L14.4554 1.03352L18.9665 5.54461L5.54461 18.9665Z" fill="#84848E"/>
                                    </svg>
                                    Find your size
                                </span>
                            </label>
                            {% assign product_size = product.metafields.global.size | split: ',' %}
                            {% assign product_colors = product.metafields.global.color | split: ',' %}
                            {% if product_size.size != blank %}
                            <select name="" id="" class="w-100 product-detail__select">
                              {% for size in product_size %}
                                <option value=""> {{ size | strip }}</option>
                              {% endfor %}
                            </select>
                              
                            {% elsif product_colors.size != blank %}
                              <select name="" id="" class="w-100 product-detail__select">
                                {% for color in product_colors %}
                                  <option value=""> {{ color | strip }}</option>
                                {% endfor %}
                              </select>
                            {% else %}
                            {% endif %}
                        </div>
                        <div class="form-group">
                          <div class="buttons_added">
                            <input class="minus is-form p-relative border-0 bg-transparent" type="button" value="–">
                            <input aria-label="quantity" class="input-qty text-align-center border-0" max="Số tối đa" min="Số tối thiểu" name="" value="1">
                            <input class="plus is-form p-relative border-0 bg-transparent" type="button" value="+">
                          </div>
                        </div>
                          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                          <div>
                            <button type="submit" class ="btn product-detail__btnaddcart--padding product-detail__btnaddcart--border letter-spacing bg-transparent tt-uppercase ">
                              Add to cart
                            </button>
                          </div>
                        <button class="btn product-detail__btnheart product-detail__btnheart--padding product-detail__btnheart--border  letter-spacing bg-transparent d-flex align-items-center">
                            <svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M9.99945 18.167C9.88779 18.167 9.78029 18.122 9.70279 18.0428L1.52945 9.73366C-0.507214 7.66449 -0.507214 4.29616 1.52945 2.22533C2.51779 1.22033 3.83362 0.666992 5.23195 0.666992C6.63112 0.666992 7.94612 1.22033 8.93445 2.22533L9.99945 3.30866L11.0645 2.22533C12.0528 1.22033 13.3678 0.666992 14.767 0.666992C16.1653 0.666992 17.4803 1.22033 18.4686 2.22533C20.5053 4.29533 20.5053 7.66366 18.4686 9.73366L10.2961 18.0428C10.2186 18.122 10.1111 18.167 9.99945 18.167ZM5.23195 1.50033C4.05862 1.50033 2.95445 1.96616 2.12362 2.80949C0.404453 4.55783 0.404453 7.40199 2.12362 9.14866L9.99945 17.1562L17.8753 9.14949C19.5945 7.40199 19.5945 4.55783 17.8753 2.81033C17.0445 1.96616 15.9403 1.50033 14.767 1.50033C13.5928 1.50033 12.4895 1.96616 11.6586 2.80949L10.2961 4.19449C10.1395 4.35366 9.85862 4.35366 9.70195 4.19449L8.33945 2.80949C7.50945 1.96616 6.40612 1.50033 5.23195 1.50033Z" fill="black"/>
                            </svg>
                        </button >
                      </form>
                      <form action="/cart/checkout/{{ product.variants.first.id }}" method="post">
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn product-detail__btnbuynow product-detail__btnbuynow--bg color-white letter-spacing  tt-uppercase w-100 text-align-center">Buy Now</button>
                      </form>
                    <blockquote class="product-detail__blockquote letter-spacing tt-uppercase d-inline-block">GET THIS PRODUCT BY 1ST APR !</blockquote>
                    <p class="product-detail__p">
                      {{ product.description }}
                    </p>
                    {% if section.settings.heading != blank %}
                      <h4 class="tt-uppercase line-height-15em title-h4 letter-spacing">{{ section.settings.heading }}</h4>
                    {% endif %}
                    {% if section.settings.image != blank %}
                      <img src= {{ section.settings.image | image_url }} alt="image" class="w-100">
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Image Text",
    "class": "section",
    "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        { 
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "Color scheme",
          "default": "background-2"
        }
      ]
   
  }
{% endschema %}
