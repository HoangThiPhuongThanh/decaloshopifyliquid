<div class="header__bottom p-relative">
    <div class="ctnr ctnr-header">
        <div class="align-items-center d-flex jc-space-between">
            <div class="header__logo">
                <a href="{{ routes.root_url }}">
                    {% if section.settings.logo-header != blank %}
                        <img src="{{ section.settings.logo-header | image_url  }}" alt="">
                    {%- else -%}
                        <span class="h2">{{ shop.name }}</span>
                    {% endif %}
                </a>
            </div>
            <div class="menu__header ">
                <div class="test">
                    <nav>
                        <ul class ="menu__ul">
                            {% for link in section.settings.menu.links %}
                                <li class="letter-spacing">
                                    <a href="{{link.settings.link}}" class="menu__a tt-uppercase d-block">{{ link.title }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="header__icons d-flex align-items-end">
                <div class="header__icon--share header__icon" >
                    <a href="{{ routes.search_url }}"  class="a-icon__header d-block">
                        {% render 'icon-search' %}
                    </a>
                </div>
                <div class="header__icon--heart header__icon" >
                    <a href="#" onclick="event.preventDefault();" class="a-icon__header d-block">
                        {% render 'icon-heart' %}
                    </a>
                </div>
                <div class="header__icon--user header__icon">
                    <a href="{{ routes.customers.account_url }}"   class="a-icon__header d-block">
                        {% render 'icon-user' %}
                    </a>
                </div>
                <div class="header__icon--cart header__icon">
                    <a href="{{ routes.cart_url }}" class="a-icon__header d-block">
                        {% render 'icon-cart' %}
                    </a>
                </div>
                <div class="header__icon--menu header__icon" >
                    <a href="" class="a-icon__header d-block">
                        <svg class ="icon-close_menu" width="20" height="14" viewBox="0 0 20 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0.624984 1.37497H19.375C19.72 1.37497 19.9999 1.09495 19.9999 0.749984C19.9999 0.40497 19.7199 0.125 19.375 0.125H0.624984C0.280022 0.125 0 0.40497 0 0.749984C0 1.095 0.280022 1.37497 0.624984 1.37497Z" fill="#171719"/>
                            <path d="M19.375 6.375H0.624984C0.27997 6.375 0 6.65502 0 6.99998C0 7.34493 0.280022 7.62495 0.624984 7.62495H19.375C19.72 7.62495 19.9999 7.34493 19.9999 6.99998C19.9999 6.65502 19.72 6.375 19.375 6.375Z" fill="#171719"/>
                            <path d="M19.375 6.375H0.624984C0.27997 6.375 0 6.65502 0 6.99998C0 7.34493 0.280022 7.62495 0.624984 7.62495H19.375C19.72 7.62495 19.9999 7.34493 19.9999 6.99998C19.9999 6.65502 19.72 6.375 19.375 6.375Z" fill="#171719"/>
                            <path d="M19.375 12.625H0.624984C0.27997 12.625 0 12.905 0 13.25C0 13.595 0.280022 13.875 0.624984 13.875H19.375C19.72 13.875 19.9999 13.5949 19.9999 13.25C20 12.905 19.72 12.625 19.375 12.625Z" fill="#171719"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
      "name": "Header",
      "class": "section-header",
      "max_blocks": 3,
      "settings": [
        {
            "type": "link_list",
            "id": "menu",
            "default": "main-menu",
            "label": "Menu header"
        },
        {
            "type": "image_picker",
            "id": "logo-header",
            "label": "Logo Header"
        }
      ],
      "blocks": [
        
    ]
    }
{% endschema %}