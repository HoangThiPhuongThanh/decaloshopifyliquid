{{ 'main-password-header.css' | asset_url | stylesheet_tag }}
<div class="header__bottom bg-black p-relative">
	<div class="ctnr ctnr-header">
		<div class="align-items-center d-flex jc-space-between">
			<div class="header__logo">
				<a href="{{ routes.root_url }}">
					{% if section.settings.logo-header != blank %}
						<img src="{{ section.settings.logo-header | image_url  }}" alt=""> 
					{%- else -%}
						<span class="h2 color-white d-flex align-items-center">{{ shop.name }}</span>
					{% endif %}
				</a>
			</div>
			<div class="password__modal-open password-link color-white d-flex">
        <svg aria-hidden="true" focusable="false" class="icon color-white" viewBox="0 0 16 21" fill="none">
					<path fill-rule="evenodd" d="M5.03 1.79A3.73 3.73 0 018 .5c1.28 0 2.28.48 2.97 1.29.67.8 1 1.87 1.03 3V7.5h3c.28 0 .5.22.5.5v12a.5.5 0 01-.5.5H1a.5.5 0 01-.5-.5V8c0-.28.22-.5.5-.5h3V4.8c0-1.1.36-2.15 1.03-3.01zM11 6.4v1.09H5V4.82c.03-.99.31-1.82.8-2.4A2.75 2.75 0 018 1.49c1.01 0 1.73.37 2.2.93.49.58.77 1.41.8 2.4V6.4zM1.5 8.49v11h13v-11h-13zm6.51 2.5a1.5 1.5 0 00-.7 2.82v2.5a.68.68 0 001.36 0v-2.47A1.5 1.5 0 008 11l.01-.01z" clip-rule="evenodd" fill="currentColor"></path>
				</svg>
				Enter using password
      </div>
		</div>
	</div>
</div>
<div class="password__modal bg-black">
	<button type="button" class="modal__close-button bg-transparent p-absolute" aria-label="Close">
    <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="icon icon-close" fill="none" viewBox="0 0 18 17">
			<path d="M.865 15.978a.5.5 0 00.707.707l7.433-7.431 7.579 7.282a.501.501 0 00.846-.37.5.5 0 00-.153-.351L9.712 8.546l7.417-7.416a.5.5 0 10-.707-.708L8.991 7.853 1.413.573a.5.5 0 10-.693.72l7.563 7.268-7.418 7.417z" fill="currentColor">
			</path>
		</svg>
	</button>
  <div class="h-100 ctnr" style="width:100%;">
    <div class="row jc-center w-100 h-100 align-items-center">
      <div class="clm " style="--w-xs: 12;--w-sm: 8; --w-md:6;">
        <div class="password__content">
          <h2 class="h3 password__content-heading text-align-center color-white">
            Enter store using password:
          </h2>
          <form method="post" action="/password" id="login_form" accept-charset="UTF-8"
            class="password-form d-flex w-100">
            <input type="hidden" name="form_type" value="storefront_password">
            <input type="hidden" name="utf8" value="âœ“">
            <div class="password-field field">
              <input type="password" name="password" id="Password" class="field__input w-100 color-white bg-transparent"
                autocomplete="current-password" {% if form.errors %} aria-invalid="true"
                aria-describedby="PasswordLoginForm-password-error" {%- endif -%} placeholder="Your password">
            </div>
            <button name="commit" class="password-button bg-white color-black btn button--outline">
              Enter
            </button>
          </form>
          <small class="password__footer-text text-align-center color-white d-block">Are you the store owner? 
						<a href="/admin" class="link underlined-link color-white">Log in here</a>
					</small>
        </div>
      </div>
    </div>
  </div>
</div>
 
{% schema %}
	{
		"name": "Header",
		"class": "section-header",
		"settings": [
			{
				"type": "image_picker",
				"id": "logo-header",
				"label": "Logo Header"
			}
		],
		"blocks": [
			
		]
	}
{% endschema %}