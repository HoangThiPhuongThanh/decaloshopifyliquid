{{ 'customize-column.css' | asset_url | stylesheet_tag }}
{% render 'general-distance' %}
<section id="st1-home" class="shop color-{{ section.settings.color_scheme }}">
  <div class="ctnr {% if section.settings.full_width == true %} full-width{% endif %}">
    <div class="distance-shared section-{{ section.id }}-padding">
      <h2 class ="{{ section.settings.heading_size }} line-height-15em title color-text title-home--bottom text-align-center">
        {{ section.settings.heading }}
      </h2>
      {% render 'collection-list' %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Featured collection",
    "class": "section",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "heading",
        "default": "Featured collection",
        "label": "Heading"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h4",
            "label": "Extra Small"
          },
          {
            "value": "h3",
            "label": "Small"
          },
          {
            "value": "h2",
            "label": "Medium"
          },
          {
            "value": "h1",
            "label": " Large "
          }
        ],
        "default": "h1",
        "label": "Heading size"
      },
      {
          "type": "collection_list",
          "id": "collection",
          "label": "Collection"
      },
      { 
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "background-2"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Make products full width",
        "default": false
      },
      {
        "type": "range",
        "id": "columns_desktop",
        "min": 1,
        "max": 6,
        "step": 1,
        "default": 4,
        "label": "Column desktop"
      },
      {
        "type": "range",
        "id": "columns_mobile",
        "min": 1,
        "max": 6,
        "step": 1,
        "default": 2,
        "label": "Column mobile"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "unit": "px",
        "label": "Padding-top desktop",
        "default": 100
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "unit": "px",
        "label": "Padding-bottom desktop",
        "default": 100
      }
      ,
      {
        "type": "range",
        "id": "padding_top_mobile",
        "min": 0,
        "max": 100,
        "unit": "px",
        "label": "Padding-top mobile",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "min": 0,
        "max": 100,
        "unit": "px",
        "label": "Padding-bottom mobile",
        "default": 40
      }
    ],
    "presets": [
    {
      "name": "Featured collection"
    }
  ]
  }
{% endschema %}