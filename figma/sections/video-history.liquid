{%  assign video = section.settings %} 
<section id="stt1-history " class="birth ctnr distance-shared ">
  <div class="row jc-center">
      <div class="clm video__history" style=" --w-lg:10; --w-xs: 12; height: -webkit-fill-available;">
          <div class="box__video cl-video p-relative ">
            {%- if video.image != blank -%}
              <img src="{{ video.image | image_url }}" alt="" class="d-block w-100 video-his">
            {%- else -%}
              {{ 'product-apparel-1' | placeholder_svg_tag: 'placeholder-svg  w-100 video-his' }}
            {% endif %}
            <video src="" controls >
              <source src="{{ video.video_embed | video_tag }}">
            </video>
            
            <div class="btn-click-video  p-absolute right-0 left-0 bottom-0 top-0 d-flex align-items-center jc-center">
                <button  onclick="event.preventDefault();"  class=" btn video__btn bg-transparent d-flex align-items-center jc-center">
                    {% render 'icon-play' %}
                </button>
            </div>
          </div>
          <h2 class ="birth__title mb-25 h1 line-height-15em title text-align-center ">
            {{ video.heading }}
          </h2>
          {{ video.paragraph }}
      </div>
  </div>
</section>
<section class="modal-video">
  <div class="cl-video close-video">X</div>
  <div class="modal-content">

  </div>
</section>
{% schema %}
  {
    "name": "Video",
    "class": "section-video",
    "settings": [
      {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
      },
      {
          "type": "video",
          "id": "video_embed",
          "label": "Video"
      },
      {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Title video",
          "label": "Heading"
      },
      {
          "type": "richtext",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididu </p>"
      }
    ]
  }
{% endschema %}