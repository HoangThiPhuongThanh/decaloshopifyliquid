<div class="product-detail__image" id="load-image">
  <div class="product-detail__image-primarykey">
    {% if product.featured_image %}
      <img id="expandedImg" class="expandedImg w-100" src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}" >
    {% endif %}
  </div>
  <div class="product-detail__list-images row fw-nowrap scroll-x p-relative">
    {% for image in product.images %}
      <div class="column scroll-snap-align-start clm" style="--w-xs:3;">
          <img class="product-detail__image-small w-100" src="{{ image | img_url: 'medium' }}" alt="{{ product.title }} - áº¢nh {{ forloop.index }}">
      </div>
      <a class="prev p-absolute">
        <svg xmlns="http://www.w3.org/2000/svg" width="11" height="20" viewBox="0 0 11 20" fill="none">
          <path d="M9.5 18.5L0.999999 9.5L9.5 1" stroke="#171719" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
      <a class="next p-absolute">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M8 3L16.5 12L8 20.5" stroke="#171719" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    {% endfor %}
      {% comment %} <div class="column clm" style="--w-xs:3;">
          <img class="product-detail__image-small w-100" src="./image/product-detail_1.png" alt="img">
      </div>
      <div class="column clm" style="--w-xs:3;">
          <img class="product-detail__image-small w-100" src="./image/product-detail_2.png" alt="img">
      </div>
      <div class="column clm box__video p-relative" style="--w-xs:3;">
          <img class="product-detail__image-small w-100" src="./image/product-detail_3.png" alt="img">
          <div class="p-absolute right-0 left-0 bottom-0 top-0 d-flex align-items-center jc-center">
              <button class=" btn bg-transparent d-flex align-items-center jc-center">
                  <svg width="17" height="19" viewBox="0 0 17 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M15.6914 7.96033C17.0247 8.73013 17.0247 10.6546 15.6914 11.4244L3.69141 18.3526C2.35807 19.1224 0.691405 18.1602 0.691405 16.6206L0.691406 2.76418C0.691406 1.22458 2.35807 0.262328 3.69141 1.03213L15.6914 7.96033Z" fill="white"/>
                  </svg>
              </button>
          </div>
      </div> {% endcomment %}
  </div>  
</div> 